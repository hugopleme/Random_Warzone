#include <stdio.h>
#include <ctype.h>
#include <time.h>
#include <stdlib.h>

int sorteio(jogadores,i){
  //int j;
  int sorteado;

  srand(time(NULL));
  
  //for (i=0;i<1;i++){
    //printf("%d ", rand() % jogadores);
  sorteado=rand() % jogadores;
  

  return sorteado;
}

void linha(void){
  printf("#######################\n");
  return;
}

int main(void) {
  int jogadores,i,jogador;
  char nome[10][10];

  printf("Numero de jogadores: ");
  scanf("%d", &jogadores);
  for (i=0;i<jogadores;i++){
    printf("Nome do %dÂº jogador: ", i+1);
    scanf("%s", nome[i]);
    nome[i][0] = toupper(nome[i][0]);
  }
  linha();
  printf("JOGADORES PARTICIPANDO:\n");
  for(i=0;i<jogadores;i++){
    printf("\t%s\n", nome[i]);
  }
  linha();

  sorteio(jogadores,i);
  jogador=sorteio(jogadores, i);
  printf("O jogador sorteado foi: %s ", nome[jogador]);
  return 0;
}
